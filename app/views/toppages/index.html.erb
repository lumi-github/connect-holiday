<% path = get_form_path %>

<div class="search">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <%= form_tag(events_index_path, method: :get, class: 'form-inline') do %>
        <div class="recipe-container">
          <div>
            <%= text_field_tag :keyword, @keyword, class: 'form-control', placeholder: 'イベントの検索 : キーワードを入力して下さい', size: 80 %>
          </div>
          <div>
            <%= submit_tag '検索', class: 'btn btn-success' %>
          </div>
        </div>
