        <div class="form-group">
          <label>日付 : </label>
          <%= date_select :event_date, @event_date, class: 'form-control' %>
        </div>
-->
      <% end %>

    </div>
  </div>
</div>

<br />


  <h1>
    <div class="concept-message">
      <div class="row">
          <div class="col-md-4 col-xs-12 concept-frame">
            <p id="concept-1">connect HOLIDAY</p>
          </div>
          <div class="col-md-4 col-xs-12 concept-frame">
            <p id="concept-2">connect PEOPLE</p>
          </div>
