<!-- モーダルの配置 -->
<div class="modal" id="modal-create-event" tabindex="-1">
  <div class="modal-dialog">
    <!-- モーダルのコンテンツ -->
    <div class="modal-content">
      <!-- モーダルのヘッダ -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
        <h2 class="modal-title" id="modal-label">休みの登録</h2>
      </div>
      <!-- モーダルのボディ -->
      <div class="col-sm-12">
        <div id="modal-body">
        <div id="gmap"></div>
          <!-- ここにモーダル内容 -->
          <%= form_for(:holiday, :url=>{controller: :holidays, action: :create}, remote: true) do |f| %>
            <h3><div id="date_arg"></div></h3>
            <h3><div id="aaaeee"></div></h3>
            <%= f.hidden_field :start_datetime %>
            
            <div class="form-group" id="allday">
              <%= label :end_date, '終日:' %>
              <%= f.check_box :allday, {:onchange => "checkAllday(this.checked?'ON':'OFF')"}, true, false%> 
            </div>
            
            <div class="form-group">
              <%= label :start_date, '開始時刻' %>
              <%#= f.time_select :start_date, :discard_second => true, class: 'form-control timepicker' %>
              <%= select :start_date_hour, :name, [['00','0'],['01','1'],['02','2'],['03','3'],['04','4'],['05','5'],['06','6'],['07','7'],['08','8'],['09','9'],['10','10'],['11','11'],['12','12'],['13','13'],['14','14'],['15','15'],['16','16'],['17','17'],['18','18'],['19','19'],['20','20'],['21','21'],['22','22'],['23','23']] %>
              :<%= select :start_date_minutes, :name, [['00','00'],['30','30']] %>     
            </div>
                
            <div class="form-group">
              <%= label :end_date, '終了時刻' %>
              <%#= f.time_select :end_date, class: 'form-control timepicker' %>
              <%= select :end_date_hour, :name, [['00','00'],['01','01'],['02','02'],['03','03'],['04','04'],['05','05'],['06','06'],['07','07'],['08','08'],['09','09'],['10','10'],['11','11'],['12','12'],['13','13'],['14','14'],['15','15'],['16','16'],['17','17'],['18','18'],['19','19'],['20','20'],['21','21'],['22','22'],['23','23']] %>
              :<%= select :end_date_minutes, :name, [['00','00'],['30','30']] %>              
            </div>
            
            <%= submit_tag "登録", {class:"btn btn-success"} %>
          <% end %>
        </div>
      </div>
      <!-- モーダルのフッタ -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" onclick='deleteAlldayCheck();'>Close</button>
      </div>
    </div>
  </div>
</div>